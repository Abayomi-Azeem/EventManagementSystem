@model LoginRequest
@{
	ViewData["Title"] = "Login";
}

<section class="ftco-section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12 col-lg-10">
				<div class="wrap d-md-flex">

					<div class="login-wrap p-4 p-md-5">
						<div class="d-flex">
							<div class="w-100">
								<h3 class="mb-4">Sign In</h3>
							</div>
						</div>
						<form asp-action="Login" class="signin-form">
							<div class="form-group mb-3">
								<label class="label" asp-for="Email"></label>
								<input asp-for="Email" type="text" class="form-control" placeholder="Email" required>
							</div>
							<div class="form-group mb-3">
								<label class="label" asp-for="Password"></label>
								<input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
							</div>
						</form>
						<div class="text-center" id="Error"> @ViewBag.Error </div>

						<p class="text-center">
							<a href="#">Forgot Password</a>
						</p>
						<p class="text-center">Not a member? <a asp-controller="Auth" asp-action="Register">Sign Up </a></p>
					</div>

				</div>
			</div>
		</div>
	</div>
</section>


@section Scripts
 {
	<script src="~/js/login/jquery.min.js" asp-append-version="true"></script>
	<script src="~/js/login/popper.js" asp-append-version="true"></script>
	<script src="~/js/login/bootstrap.min.js" asp-append-version="true"></script>
	<script src="~/js/login/main.js" asp-append-version="true"></script>
}



